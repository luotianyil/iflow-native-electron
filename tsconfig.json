{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "rootDir": "./",
    "lib": [ "es6", "dom" ],
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["types/*"]
    },
    "typeRoots": [ "node_modules/@types" ]
  },
  "include": [ "./src", "./types" ],
  "compileOnSave": false
}
